@model HKQTravellingAuthenication.Models.Tour.Tours

@{
    ViewData["Title"] = "Cập nhật thông tin tour du lịch";
    Layout = "_Layout";
}

<h1>Edit a tour</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="ToursAdministrator" asp-area="Tour" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TourId" />
            <div class="form-group">
                <label asp-for="StartLocationId" class="control-label"></label>
                <select asp-for="StartLocationId" class="form-control" asp-items="ViewBag.StartLocationId" name="StartLocationId"></select>
                <span asp-validation-for="StartLocationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-forEndLocationId" class="control-label"></label>
                <select asp-for="EndLocationId" class="form-control" asp-items="ViewBag.EndLocationId" name="EndLocationid"></select>
                <span asp-validation-for="EndLocationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TourTypeId" class="control-label"></label>
                <select asp-for="TourTypeId" class="form-control" asp-items="ViewBag.TourTypeId" name="TourTypeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TourName" class="control-label"></label>
                <input asp-for="TourName" class="form-control" name="TourName"/>
                <p class="text-danger">@ViewData["validation_message_tourName"]</p>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" name="Price"/>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" name="StartDate"/>
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" name="EndDate"/>
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" name="Status"/>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Remaining" class="control-label"></label>
                <input asp-for="Remaining" class="form-control" name="Remaining"/>
                <span asp-validation-for="Remaining" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" id="mySummernoteEditor" name="Description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiscountId" class="control-label"></label>
                <select asp-for="DiscountId" class="form-control" asp-items="ViewBag.DiscountId" name="DiscountId"></select>
                <span asp-validation-for="DiscountId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PriceInclude" class="control-label"></label>
                <input asp-for="PriceInclude" class="form-control" name="PriceInclude" />
                <span asp-validation-for="PriceInclude" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PriceNotInclude" class="control-label"></label>
                <input asp-for="PriceNotInclude" class="form-control" name="PriceNotInclude" />
                <span asp-validation-for="PriceNotInclude" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surcharge" class="control-label"></label>
                <input asp-for="Surcharge" class="form-control" name="Surcharge" />
                <span asp-validation-for="Surcharge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CancelChange" class="control-label"></label>
                <input asp-for="CancelChange" class="form-control" name="CancelChange" />
                <span asp-validation-for="CancelChange" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note" class="control-label"></label>
                <input asp-for="Note" class="form-control" name="Note" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Trở lại trang</a>
</div>

@{
    var summernote = new HKQTravellingAuthenication.Models.Summernote("#mySummernoteEditor");
}
<partial name="_Summernote" model="summernote" />